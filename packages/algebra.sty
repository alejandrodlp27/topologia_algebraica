% ALGEBRA

% Letters
	\renewcommand{\a}{\mathfrak{a}}
	\newcommand{\p}{\mathfrak{p}} %%% gothic p for prime ideal
	\newcommand{\q}{\mathfrak{q}} %%% gothic q for prime ideal
	\newcommand{\m}{\mathfrak{m}} %%% gothic m for maximal ideal
	\newcommand{\n}{\mathfrak{n}} %%% gothic n for maximal ideal
	\newcommand{\F}{\mathfrak{F}} %%% gothic F for sheaves
	\newcommand{\M}{\mathfrak{M}} %%% gothic M for module filtration
	
	\newcommand{\oO}{\mathfrak{o}} %%% gothic o
	\newcommand{\OO}{\mathfrak{o}} %%% gothic o

	\newcommand{\Id}{\text{Id}} %%% Identity function
	\newcommand{\coker}{\text{coker}} %%% cokernel
	\newcommand{\shortexact}[3]{0\rightarrow #1 \rightarrow #2 \rightarrow #3 \rightarrow 0}
	\newcommand{\gr}{\text{gr}} %%% graded ring notation
	\newcommand{\car}{\text{char}} %%% characteristic of a field

% Operators
	\newcommand{\jac}[1]{\text{Jac}\left( #1 \right)} %%% Jacobson radical
	\newcommand{\spec}[1]{\text{Spec}\left( #1 \right)} %%% prime spectrum of a ring
	\newcommand{\maxspec}[1]{\text{MaxSpec}\left( #1 \right)} %%% maximal spectrum of a ring
	\newcommand{\V}[1]{\mathbb{V}\left( #1 \right)} %%% zariski closed set of an ideal
	\newcommand{\Hom}[1]{\text{Hom}\left( #1 \right)} %%% Hom
	\newcommand{\obj}[1]{\text{obj}\left( #1 \right)} %%% objects of a category
	\newcommand{\cat}[1]{\mathbf{#1}}